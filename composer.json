{
    "name": "cortex/tags",
    "description": "Cortex Tags is a frontend layer for the polymorphic Laravel package, for tag management. You can tag any eloquent model with ease, and utilize the awesomeness of Sluggable, and Translatable models out of the box.",
    "type": "cortex-module",
    "keywords": [
        "tag",
        "model",
        "cortex",
        "laravel",
        "taggable",
        "taxonomy",
        "eloquent",
        "translatable",
        "polymorphic",
        "sluggable",
        "sortable",
        "rinvex",
        "tags"
    ],
    "license": "MIT",
    "homepage": "https://rinvex.com",
    "support": {
        "email": "help@rinvex.com",
        "issues": "https://github.com/rinvex/cortex-tags/issues",
        "source": "https://github.com/rinvex/cortex-tags",
        "docs": "https://github.com/rinvex/cortex-tags/README.md"
    },
    "authors": [
        {
            "name": "Rinvex LLC",
            "homepage": "https://rinvex.com",
            "email": "help@rinvex.com"
        },
        {
            "name": "Abdelrahman Omran",
            "homepage": "https://omranic.com",
            "email": "me@omranic.com",
            "role": "Project Lead"
        },
        {
            "name": "The Generous Laravel Community",
            "homepage": "https://github.com/rinvex/cortex-tags/contributors"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "illuminate/auth": "^9.0.0 || ^10.0.0",
        "illuminate/console": "^9.0.0 || ^10.0.0",
        "illuminate/http": "^9.0.0 || ^10.0.0",
        "illuminate/routing": "^9.0.0 || ^10.0.0",
        "illuminate/support": "^9.0.0 || ^10.0.0",
        "cortex/foundation": "^8.0.0",
        "diglactic/laravel-breadcrumbs": "^8.0.0",
        "laravelcollective/html": "^6.3.0",
        "league/fractal": "^0.20.0",
        "proengsoft/laravel-jsvalidation": "^4.7.0",
        "rinvex/laravel-composer": "^7.0.0",
        "rinvex/laravel-menus": "^7.0.0",
        "rinvex/laravel-support": "^7.0.0",
        "rinvex/laravel-tags": "^7.0.0",
        "spatie/laravel-activitylog": "^4.4.0",
        "yajra/laravel-datatables-buttons": "^9.0.0",
        "yajra/laravel-datatables-fractal": "^10.0.0",
        "yajra/laravel-datatables-html": "^9.0.0",
        "yajra/laravel-datatables-oracle": "^10.0.0"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.32.0",
        "phpunit/phpunit": "^10.1.0"
    },
    "autoload": {
        "psr-4": {
            "Cortex\\Tags\\": "src/",
            "Cortex\\Tags\\Database\\Factories\\": "database/factories/",
            "Cortex\\Tags\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cortex\\Tags\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cortex\\Tags\\Providers\\TagsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
